<% if params[:category_id] %>
<h4><%= @category.name %></h4>
<% end %>
<ul class="users-recipes">
<% @recipes.each do |recipe| %>
    <li class="recipe-name">
    <%= link_to "#{recipe.name}", user_recipe_path(recipe.user, recipe) %>
    </li>
    <li class="recipe-category">
    <% recipe.categories.each do |category| %>
    <%# debugger %>
    <%# category.name %>
    <%= link_to "#{category.name}", category_recipes_path(recipe.category_ids)%>
    <% end %>
    <br><br>
    </li>
<% end %>
</ul>
<%= link_to "Return to profile", user_path(@user)%><br>
<%= link_to "Log Out", logout_path %>